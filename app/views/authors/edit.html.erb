<h1>Edit your Author Details</h1>
<br />

<div>
  <%= simple_form_for @author do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :age %>
    <br />
    <%= f.button :submit , class: 'btn btn-primary' %> 
    <br /><br />
    <%= link_to 'Delete', author_path(@author), method: :delete, data: {confirm: 'Are you sure you want to delete this author?'}, class: 'btn btn-danger' %>
    <br /> <br />
    <%= link_to 'Cancel', author_path(@author), class: 'btn btn-info' %>
  <% end %>
</div>